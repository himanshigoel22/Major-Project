<% layout("layouts/boilerplate") -%>
<body>

<div class="row mt-3">
<div class="col-8 offset-2">
<h2> Login on WanderLust</h2>
<br>
<form action="/login" method="POST" class="needs-validation" novalidate>
    <div class="mb-3">
    <label for="username" class="form-label">Username</label>
    <input name = "username" 
    id="username"
    type="text" 
    class="form-control"
    required >
    </div>
   
    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input name = "password" 
        id="password"
        type="password" 
        class="form-control"
        required >
    </div>
    <button class="add-btn btn mt-3 btn-dark" >Login</button>
    <br><br><br><br>
</form>
</div>
</div>
</body>